<h2>Current volunteer selection: <%= @volunteer.name %></h2>
<h3>Volunteer is currently assigned to project: <%= @volunteer.project.title %></h3>

<form action="/projects/<%= @volunteer.project.id %>/volunteers/<%= @volunteer.id %>" method="post">
    <input name="_method" type="hidden" value="patch">

    <label>
        Edit volunteer name below:
        <input id="name" name="volunteer_name" type="text">
    </label>

    <button type="submit">Update volunteer</button>
</form>

<form action="/projects/<%= @volunteer.project.id %>/volunteers/<%= @volunteer.id %>" method="post">
    <input name="_method" type="hidden" value="delete">

    <button type="submit">Delete volunteer?</button>
</form>
<br>
<a href="/projects/<%= @volunteer.project.id %>">Click here to return back to <%= @volunteer.project.title %> project</a>
